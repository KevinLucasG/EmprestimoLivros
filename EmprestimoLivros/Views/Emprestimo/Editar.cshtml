@model EmpretismoModel
@{
    ViewData["title"] = "Editar Emprestimo";
}
<div class="container bg-dark p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-light"> Edição de Empréstimo </h1>
    </div>
    <form method="post" asp-controller="Emprestimo" asp-action="Editar">
        <input type="hidden" asp-for="Id"/>
        <div class="mb-3">
            <label for="Recebedor" class="form-label text-light">Recebedor:</label>
            <input type="text" class="form-control text-light" asp-for="Recebedor" id="Recebedor" placeholder="Que está recebendo o Livro?">
            <span class="text-danger" asp-validation-for="Recebedor"><</span>
        </div>
        <div class="mb-3">
            <label for="Fornecedor" class="form-label text-light">Fornecedor:</label>
            <input type="text" class="form-control text-light" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem está emprestando o livro?">
            <span class="text-danger" asp-validation-for="Fornecedor"><</span>
        </div>
        <div class="mb-3">
            <label for="Livro:" class="form-label text-light">Livro</label>
            <input type="text" class="form-control text-light" asp-for="LivroEmprestado" id="Livro" placeholder="Qual é o livro que está sendo emprestado?">
            <span class="text-danger" asp-validation-for="LivroEmprestado"><</span>
        </div>
        <div class="d-flex gap-5 nt-5">
            <button type="submit" class="btn btn-success">Editar</button>
            <a class="btn btn-primary m-50" asp-controller="Emprestimo" asp-action="Index">Voltar</a>
        </div>


    </form>
</div>